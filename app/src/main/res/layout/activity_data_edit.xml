<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DataEditActivity"
    android:background="#56abe4"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/titlebar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#EFEFEF">

        <RelativeLayout
            android:id="@+id/headIconForDataEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFF"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="头像"></TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow_right2"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nickNameForDataEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFF"
            android:layout_below="@+id/headIconForDataEdit"
            android:layout_marginTop="1px"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="昵称"></TextView>

            <TextView
                android:id="@+id/nickNameShowForDataEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:text="kinsin"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="50dp"
                android:textSize="20sp"
                android:gravity="center_vertical|left"
                ></TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow_right2"></ImageView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>