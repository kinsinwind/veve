<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/otherHeadIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/head_icon2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        ></ImageView>

    <ImageView
        android:id="@+id/meHeadIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/head_icon2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        ></ImageView>

    <TextView
        android:id="@+id/meMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:background="@drawable/me_pop"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:visibility="gone"
        ></TextView>

    <TextView
        android:id="@+id/otherMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:background="@drawable/other_pop"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:visibility="gone"
        ></TextView>

</RelativeLayout>