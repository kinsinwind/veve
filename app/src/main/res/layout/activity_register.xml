<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_register_back"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_margin="10dp"
            android:onClick="back"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:hint="账号"
                android:gravity="center"
                android:background="@drawable/login_edit"
                android:layout_margin="10dp"
                ></EditText>

            <EditText
                android:id="@+id/passwrod1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:hint="密码"
                android:gravity="center"
                android:background="@drawable/login_edit"
                android:layout_margin="10dp"
                ></EditText>

            <EditText
                android:id="@+id/passwrod2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:hint="确认密码"
                android:gravity="center"
                android:background="@drawable/login_edit"
                android:layout_margin="10dp"
                ></EditText>

            <EditText
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:hint="昵称"
                android:gravity="center"
                android:background="@drawable/login_edit"
                android:layout_margin="10dp"
                ></EditText>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:inputType="textEmailAddress"
                android:hint="邮箱"
                android:gravity="center"
                android:background="@drawable/login_edit"
                android:layout_margin="10dp"
                ></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/passCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="验证码"
                    android:background="@drawable/login_edit"
                    android:layout_margin="10dp"></EditText>

                <Button
                    android:id="@+id/sendPassCodeBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:text="发送验证码"
                    android:background="@drawable/login_btn"></Button>

            </LinearLayout>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="REGISTER"
                android:background="@drawable/login_btn"
                android:layout_margin="10dp"
                android:textSize="25sp"
                ></Button>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>